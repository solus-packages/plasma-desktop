From: "F. von Gellhorn" <flinux@vongellhorn.ch>
Date: Sat, 15 Aug 2020 18:33:17 +0200
Subject: [PATCH 1/2] Solus tweaks to default kicker

- Add shortcuts for Software Center in menu
- Add solus icon to kicker menu
---
 applets/kicker/package/contents/config/main.xml | 6 +++---
 applets/kicker/package/metadata.desktop         | 2 +-
 2 files changed, 4 insertions(+), 4 deletions(-)

diff --git a/applets/kicker/package/contents/config/main.xml b/applets/kicker/package/contents/config/main.xml
index cddcad4..43d5f4c 100644
--- a/applets/kicker/package/contents/config/main.xml
+++ b/applets/kicker/package/contents/config/main.xml
@@ -8,7 +8,7 @@
   <group name="General">
     <entry name="icon" type="String">
       <label>The name of the icon to use for the compact representation (e.g. on a small panel).</label>
-      <default>start-here-kde</default>
+      <default>start-here-solus</default>
     </entry>
     <entry name="useCustomButtonImage" type="Bool">
       <label>Whether to use a custom image instead of an icon in the compact representation (e.g. on a small panel).</label>
@@ -16,7 +16,7 @@
     </entry>
     <entry name="customButtonImage" type="Url">
       <label>The URL of the custtom image to use instead of an icon in the compact representation (e.g. on a small panel).</label>
-      <default></default>
+      <default>/usr/share/icons/hicolor/scalable/places/start-here-solus.svg</default>
     </entry>
 
     <entry name="appNameFormat" type="Int">
@@ -38,7 +38,7 @@
     </entry>
     <entry name="favoriteApps" type="StringList">
       <label>List of general favorites. Supported values are menu id's (usually .desktop file names), special URLs that expand into default applications (e.g. preferred://browser), document URLs and KPeople contact URIs.</label>
-      <default>preferred://browser,kontact.desktop,systemsettings.desktop,org.kde.dolphin.desktop,ktp-contactlist.desktop,org.kde.kate.desktop,org.kde.discover</default>
+      <default>preferred://browser,systemsettings.desktop,org.kde.dolphin.desktop,org.kde.konversation.desktop,,org.kde.kate.desktop,solus-sc.desktop</default>
     </entry>
     <entry name="favoriteSystemActions" type="StringList">
       <label>List of system action favorites.</label>
diff --git a/applets/kicker/package/metadata.desktop b/applets/kicker/package/metadata.desktop
index 08d6dfc..5b1b94a 100644
--- a/applets/kicker/package/metadata.desktop
+++ b/applets/kicker/package/metadata.desktop
@@ -97,7 +97,7 @@ Comment[zh_CN]=基于层叠弹出窗口的启动器
 Comment[zh_TW]=以啟動器為基底的彈出式串連選單
 
 Type=Service
-Icon=start-here-kde
+Icon=start-here-solus
 X-KDE-ServiceTypes=Plasma/Applet
 
 X-Plasma-API=declarativeappletscript
